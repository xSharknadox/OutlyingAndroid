<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ihor.outlying1.Activities.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background1"
        android:scaleType="centerCrop"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50000000">

        <TextView
            android:id="@+id/register_text_sign_up"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Sign Up"
            android:textSize="34sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <EditText
            android:id="@+id/register_edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Username"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:drawableLeft="@drawable/ic_login_person"
            android:backgroundTint="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintTop_toBottomOf="@+id/register_text_sign_up"
            />
        <EditText
            android:id="@+id/register_edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Email"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_login_password"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_name"/>
        <EditText
            android:id="@+id/register_edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Password"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_login_password"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_email"/>
        <EditText
            android:id="@+id/register_edit_text_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Confirm password"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_login_password"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_password"/>
        <Button
            android:id="@+id/register_sing_up_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toTopOf="@id/register_linear_of_login"
            android:text="Join"
            android:background="#ff3366"
            android:textColor="#FFFFFF"
            android:padding="0dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/register_linear_of_login"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="parent"
            android:background="#50000000">
            <TextView
                android:id="@+id/register_login_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Already have an account?"
                android:textColor="#ffffff"
                android:gravity="right|center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="4"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/register_login_link_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Sing In"
                android:textColor="#fee0e8"
                android:clickable="true"
                android:gravity="left|center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="4"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
