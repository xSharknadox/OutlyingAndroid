<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <TextView
        android:id="@+id/order_confirm_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/order_confirm_list_item_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Price: 50"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/order_confirm_list_item_portions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/order_confirm_list_item_price_text"
        android:text="Portions:"
        android:textSize="16sp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"/>

    <LinearLayout
        android:id="@+id/order_confirm_linear_portions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/order_confirm_list_item_minus_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:text="-"
            android:padding="0dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/order_confirm_list_item_sum_price"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="230"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/order_confirm_list_item_plus_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:text="+"
            android:padding="0dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>