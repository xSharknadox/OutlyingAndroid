<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/orders_recycler_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="12dp"
        android:text="211424"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_centerInParent="true"
        android:background="#F5F5F5"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/orders_recycler_item_name">
        <ImageView
            android:id="@+id/orders_recycler_item_icon"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"/>

        <TextView
            android:id="@+id/orders_recycler_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:text="211424"
            android:textSize="18sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toRightOf="@+id/orders_recycler_item_icon"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/orders_recycler_item_address"
            android:layout_width="277dp"
            android:layout_height="49dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:text="211424"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/orders_recycler_item_icon"
            app:layout_constraintTop_toBottomOf="@+id/orders_recycler_item_number" />

        <TextView
            android:id="@+id/orders_recycler_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="211424"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orders_recycler_item_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/orders_recycler_item_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp"
            android:padding="6dp"
            android:text="Скасувати"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orders_recycler_item_address"/>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>