<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@drawable/border_restaurants_item">
            <TextView
                android:id="@+id/restaurants_listview_item_restaurant_name"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="8"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:textSize="18sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center|left"
                />
            <Button
                android:id="@+id/restaurants_listview_item_restaurant_info_button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:textColor="#ff3366"
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/border_info_button"
                android:text="!"/>
        </LinearLayout>

</android.support.constraint.ConstraintLayout>